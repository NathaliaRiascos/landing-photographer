---
import { Image } from "astro:assets";

const { image, title } = Astro.props;
---

<article class="relative  text-center">
  <Image src={image} alt={title} class="object-cover w-full h-full  rounded-sm" height={489} />
  <div class="absolute inset-0 z-10 bg-black/10 rounded-sm" aria-hidden="true"></div>
  <h3
    class="text-2xl z-20 font-semibold absolute block bottom-4 left-1/2 transform -translate-x-1/2 text-white text-balance"
  >
    {title}
  </h3>
</article>
